<Window x:Class="Online_Doctor_Appointment_System.Views.StatisticWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Online_Doctor_Appointment_System.Views"
        mc:Ignorable="d"
        Title="Анализ эффективности" Height="720" Width="1150" WindowState="Maximized">
    <Grid Background="{DynamicResource {x:Static SystemColors.GradientInactiveCaptionBrushKey}}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Первый GroupBox -->
            <RowDefinition Height="Auto"/>
            <!-- Второй GroupBox -->
            <RowDefinition Height="Auto"/>
            <!-- Кнопки -->
            <RowDefinition Height="*"/>
            <!-- Запасное пространство -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="135"/>
            <ColumnDefinition Width="345"/>
            <ColumnDefinition Width="*"/>
            <!-- DataGrid займет всё оставшееся пространство -->
        </Grid.ColumnDefinitions>

        <!-- Первый GroupBox с данными -->
        <GroupBox Grid.Row="0" Grid.Column="0" Header="Весоые коэффиценты" Margin="5" FontSize="16" Foreground="#FF7B16B6" BorderBrush="#FF7B16B6" Grid.ColumnSpan="2">
            <StackPanel Margin="10">
                <!-- 4 TextBox в 2 колонки -->
                <Grid Margin="0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Левый столбец -->
                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,5">
                        <Label Content="Вес рейтинга" FontSize="16" Foreground="#FF7B16B6"/>
                        <TextBox Style="{StaticResource PrimaryTB}" Name="RatingTB"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,5">
                        <Label Content="Вес выполненных записей" FontSize="16" Foreground="#FF7B16B6"/>
                        <TextBox Style="{StaticResource PrimaryTB}" Name="CompletedRecTB"/>
                    </StackPanel>

                    <!-- Правый столбец -->
                    <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,5">
                        <Label Content="Вес стажа" FontSize="16" Foreground="#FF7B16B6"/>
                        <TextBox Style="{StaticResource PrimaryTB}" Name="ExperienceTB"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,5">
                        <Label Content="Вес времени ожидания" FontSize="16" Foreground="#FF7B16B6"/>
                        <TextBox Style="{StaticResource PrimaryTB}" Name="WaitingTimeTB"/>
                    </StackPanel>
                </Grid>
                <Button Content="?"
        Name="HelpBtn"
        Style="{StaticResource PrimaryBtn}"
        Padding="5" 
        Width="30"
        ToolTip="Открыть справку весовых коэффицентов"
        HorizontalAlignment="Right"
        FontSize="16" Click="HelpBtn_Click"
        >

            <Button.Resources>
                <Popup x:Key="HelpPopup" 
                    PlacementTarget="{Binding ElementName=HelpBtn}"
                    StaysOpen="False"
                    PopupAnimation="Fade"
                    AllowsTransparency="True"
                    HorizontalOffset="0"
                    VerticalOffset="0"
                    >
                            <Border Background="White" 
                    BorderBrush="#FF7B16B6" 
                    BorderThickness="1"
                    CornerRadius="3"
                    Padding="10"
                    >
                                <StackPanel MaxWidth="300">
                                    <TextBlock Text="Справка по весовым коэффициентам:" 
                               FontWeight="Bold"
                               Foreground="#FF7B16B6"
                               Margin="0,0,0,5"/>
                                    <TextBlock Foreground="#FF7B16B6" Text="1. Входные данные должны быть числами в виде десятичных дробей;" 
                               TextWrapping="Wrap"/>
                                    <TextBlock Foreground="#FF7B16B6" Text="2. Для эффективного найма сотрудников, повысьте коэффицент стажа;" 
                               TextWrapping="Wrap"/>
                                    <TextBlock Foreground="#FF7B16B6" Text="3. Для премирования повысьте коэффицент выполненных записей;" 
                               TextWrapping="Wrap"
                               Margin="0,3,0,0"/>
                                    <TextBlock Foreground="#FF7B16B6" Text="4. Для оптимизации расписания повысьте коэффицент времени ожидания;" 
                               TextWrapping="Wrap"
                               Margin="0,3,0,0"/>
                                    <TextBlock Foreground="#FF7B16B6" Text="5. Сумма всех коэффицентов должна быть равной 1." 
                               TextWrapping="Wrap"
                               Margin="0,3,0,0"/>
                                    <Button Content="Закрыть" 
                                    Style="{StaticResource WarningBtn}"
                                    Click="ClosePopup_Click"
                                    HorizontalAlignment="Right"
                                    Margin="0,10,0,0"
                                    Padding="5"
                                    FontSize="14"/>
                                </StackPanel>
                            </Border>
                        </Popup>
                    </Button.Resources>
                </Button>

                <StackPanel Margin="0 10 0 0">
                    <TextBlock Margin="0 10 0 0">
                        <Run FontSize="20" FontWeight="Bold">Процент рейтинга:</Run>
                        <Run FontSize="18" FontWeight="Bold" Name="RatingPercentText">0</Run>
                    </TextBlock>
                    <TextBlock Margin="0 10 0 0">
                        <Run FontSize="20" FontWeight="Bold">Процент стажа:</Run>
                        <Run FontSize="18" FontWeight="Bold" Name="ExpPercentText">0</Run>
                    </TextBlock>
                    <TextBlock Margin="0 10 0 0">
                        <Run FontSize="20" FontWeight="Bold">Процент записей:</Run>
                        <Run FontSize="18" FontWeight="Bold" Name="CompRecPercentText">0</Run>
                    </TextBlock>
                    <TextBlock Margin="0 10 0 0">
                        <Run FontSize="20" FontWeight="Bold">Процент времени:</Run>
                        <Run FontSize="18" FontWeight="Bold" Name="WaitTimePercentText">0</Run>
                    </TextBlock>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- Кнопки под GroupBox -->
        <StackPanel Grid.Row="2" Grid.Column="0" Margin="5,5,5,5.4" Grid.ColumnSpan="2">
            <Button Content="Расчитать"
                    Name="CalcStatisticBtn"
                    Style="{StaticResource PrimaryBtn}"
                    Margin="5"
                    Padding="15,7" 
                    FontSize="14" Click="CalcStatisticBtn_Click" />
        </StackPanel>

        <!-- DataGrid -->
        <DataGrid Grid.Row="0" Grid.Column="2" Grid.RowSpan="4"
              Margin="5,5,4.6,5.2" 
              Name="EfficiencyDG" 
              AutoGenerateColumns="False" 
              IsReadOnly="True"
              Style="{StaticResource PrimaryDataGrid}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Врач" Binding="{Binding Doctor.FullName}" Width="210"
                                            HeaderStyle="{StaticResource PrimaryDataGridColumnHeader}"
                            ElementStyle="{StaticResource PrimaryDataGridCellText}"
                            CellStyle="{StaticResource PrimaryDataGridCell}"/>
                <DataGridTextColumn Header="Всего записей" Binding="{Binding TotalAppointments}" Width="150"
                                            HeaderStyle="{StaticResource PrimaryDataGridColumnHeader}"
                            ElementStyle="{StaticResource PrimaryDataGridCellText}"
                            CellStyle="{StaticResource PrimaryDataGridCell}"/>
                <DataGridTextColumn Header="Выполненные записи" Binding="{Binding SuccessfulAppointments}" Width="160"
                                            HeaderStyle="{StaticResource PrimaryDataGridColumnHeader}"
                            ElementStyle="{StaticResource PrimaryDataGridCellText}"
                            CellStyle="{StaticResource PrimaryDataGridCell}"/>
                <DataGridTextColumn Header="% выполненных записей" Binding="{Binding SuccessRate, StringFormat={}{0}%}" Width="150"
                                            HeaderStyle="{StaticResource PrimaryDataGridColumnHeader}"
                            ElementStyle="{StaticResource PrimaryDataGridCellText}"
                            CellStyle="{StaticResource PrimaryDataGridCell}"/>
                <DataGridTextColumn Header="Среднее время приема" Binding="{Binding AverageDuration, StringFormat={}{0} мин}" Width="150"
                                            HeaderStyle="{StaticResource PrimaryDataGridColumnHeader}"
                            ElementStyle="{StaticResource PrimaryDataGridCellText}"
                            CellStyle="{StaticResource PrimaryDataGridCell}"/>
                <DataGridTextColumn Header="Оценка эффективности" Binding="{Binding EfficiencyScore}" Width="*"
                                            HeaderStyle="{StaticResource PrimaryDataGridColumnHeader}"
                            ElementStyle="{StaticResource PrimaryDataGridCellText}"
                            CellStyle="{StaticResource PrimaryDataGridCell}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
